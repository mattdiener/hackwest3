<div id="login" class="fullscreen">
    <div class="ui middle aligned center aligned grid">
        <div class="column panel">
            <h2 class="ui teal image header">
                <img src="/images/logo-60x60.png" class="image">
                <div class="content">
                    Create Account
                </div>
            </h2>
            <form {{action 'createAccount' on='submit'}} class="ui large form">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                          {{input id='identification' type="text" name="email" placeholder="Enter E-mail address" value=identification}}
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                          {{input id='password' placeholder='Enter Password' type='password' value=password}}
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                          {{input id='passwordConfirm' placeholder='Confirm Password' type='password' value=passwordConfirm}}
                        </div>
                    </div>
                    <button class="ui fluid large teal submit button">Login</button>
                  {{#if errorMessage}}
                      <p>{{errorMessage}}</p>
                  {{/if}}
                </div>

                <div class="ui error message"></div>

            </form>
        </div>
    </div>
</div>